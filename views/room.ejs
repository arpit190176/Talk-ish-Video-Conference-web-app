<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="favicon.ico">
    <title>Talk-ish</title>
    <link rel="stylesheet" href="style.css" />
    <script src="/socket.io/socket.io.js"></script>
      
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    
    <link rel="stylesheet" href="css/all.css">
    <script>
      const ROOM_ID = "<%= roomId %>";
    </script>
  </head>
  <body>
    <div class="header">
      <img class="logo" src="Talk-ish.png">
        <div class="header__back">
          <i class="fas fa-angle-left"></i>
        </div>
        <h3 style="color:white">Talk-ish meeting room</h3>
      </div>
    </div>  
    <div class="main">  
    <div class="main__left">
      <div class="videos__group">
        <div id="video-grid">

        </div>
      </div>
      <div class="opts">
        <div class="opts__left">
          <div id="stopVideo" class="optbut">
            <div class="vidDiv">
              <i class="fa fa-video-camera"></i>
            </div>
            <!-- <span><br>Turn off video</span> -->
          </div>
          <div id="muteButton" class="optbut">
            <div class="muteDiv">
             <i class="fa fa-microphone"></i>
            </div>
            <!-- <span>Mute</span> -->
          </div>
          <div id="showChat" class="optbut">
            <i class="fa fa-comment"></i>
          </div>
        </div>
        <div class="opts__right">
          <div id="inviteButton" class="optbut">
            <i class="fas fa-user-plus"></i>
            <span>Invite</span>
          </div>
          <div id="exitButton" class="optbut" onclick="okBye()">
            <div class="exitDiv">
              <i class="fas fa-door-open"></i>
            </div>
            <span>Leave meeting</span>
          </div>
        </div>
      </div>
    </div>
    <div class="main__right">
      <div class="main__chat_window">
          <div class="messages">

          </div>
      </div>
      <div class="main_container">
        <input id="chat_message" type="text" autocomplete="off" placeholder="Your message goes in here...">
        <div id="send" class="optbut">
          <div class="sendDiv">
            <i class="fas fa-paper-plane"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  </body>
  <script src="script.js"></script>
</html>
